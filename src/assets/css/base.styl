body,html 
  line-height: 1
  font-weight: 200
  font-family: 'PingFang SC','STHeitiSC-Light','Helvetice-Light',arial,sans-serif
*
  margin: 0
  padding: 0
a
  text-decoration: none
ul
  list-style: none
@media (-webkit-min-device-pixel-radio: 1.5), (min-device-pixel-radio: 1.5)
  .border-1px
    &:after
      -webkit-transform: scaleY(0.7)
      transform: scalseY(0.7)
@media (-webkit-min-device-pixel-radio: 2), (min-device-pixel-radio: 2)
  .border-1px
    &:after
      -webkit-transform: scaleY(0.5)
      transform: scalseY(0.5)
.clearfix
  display: inline-block
  &:after
    display: block
    content: "."
    height: 0
    line-height: 0
    clear: both
    visibility: hidden 